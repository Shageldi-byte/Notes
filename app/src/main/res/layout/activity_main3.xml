<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="0dp"
    android:layout_height="match_parent"
    tools:context=".Main3Activity">



        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:textColorHint="#4E4C4C"
            android:id="@+id/resminaam"
            android:layout_height="wrap_content"
            android:hint="GÃ¶zleg...">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/gozle_resminama"
                android:inputType="text"
                android:textColor="#4E4C4C"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>
    <ListView
        android:layout_below="@+id/resminaam"
        android:layout_above="@+id/bottom_bar"
        android:id="@+id/resminama_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>




    <LinearLayout
        android:background="#BE73CBF1"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/bottom_bar"
        android:layout_height="wrap_content">

      <Button
          android:id="@+id/resminama_add"
          android:background="@drawable/addd"
          android:layout_width="50sp"
          android:layout_height="50sp"/>
        <Button
            android:id="@+id/delete_resminama"
            android:background="@drawable/image08"
            android:layout_width="50sp"
            android:layout_marginLeft="20dp"
            android:layout_height="50sp"/>
        <Button
            android:id="@+id/edit_resminama"
            android:background="@drawable/image11"
            android:layout_width="50sp"
            android:layout_marginLeft="20dp"
            android:layout_height="50sp"/>
        <Button
            android:id="@+id/delete_all"
            android:background="@drawable/delete_all"
            android:layout_width="50sp"
            android:layout_marginLeft="20dp"
            android:layout_height="50sp"/>



    </LinearLayout>




</RelativeLayout>
